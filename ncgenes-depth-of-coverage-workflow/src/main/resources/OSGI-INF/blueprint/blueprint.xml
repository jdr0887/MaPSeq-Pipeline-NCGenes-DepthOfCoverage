<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0" default-activation="eager">

  <cm:property-placeholder persistent-id="edu.unc.mapseq.workflow.ncgenes.doc" update-strategy="reload">
    <cm:default-properties>
      <cm:property name="corePoolSize" value="100" />
      <cm:property name="maxPoolSize" value="100" />
      <cm:property name="siteName" value="Hatteras" />
      <cm:property name="reference-sequence" value="$NCGENESDOC_REFERENCES_DIRECTORY/BUILD.37.1/bwa061sam0118/BUILD.37.1.sorted.shortid.fa" />
    </cm:default-properties>
  </cm:property-placeholder>

  <reference id="maPSeqConfigurationService" interface="edu.unc.mapseq.config.MaPSeqConfigurationService" />
  <reference id="maPSeqDAOBeanService" interface="edu.unc.mapseq.dao.MaPSeqDAOBeanService" />

  <bean id="NCGenesDOCWorkflowBeanService" class="edu.unc.mapseq.workflow.core.WorkflowBeanServiceImpl">
    <property name="corePoolSize" value="${corePoolSize}" />
    <property name="maxPoolSize" value="${maxPoolSize}" />
    <property name="maPSeqConfigurationService" ref="maPSeqConfigurationService" />
    <property name="maPSeqDAOBean" ref="maPSeqDAOBean" />
    <property name="attributes">
      <map>
        <entry key="referenceSequence" value="${reference-sequence}" />
        <entry key="siteName" value="${siteName}" />
      </map>
    </property>
    <cm:managed-properties persistent-id="edu.unc.mapseq.workflow.ncgenes.doc" update-strategy="container-managed" />
  </bean>

  <service ref="NCGenesDOCWorkflowBeanService" interface="edu.unc.mapseq.workflow.WorkflowBeanService" />

</blueprint>
